{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{/each}}
<h2>Nova postagem</h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
        <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo">Título: </label>
                <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}" required>
            <label for="slug">Slug: </label>
                <input type="text" name="slug" class="form-control" value="{{postagem.slug}}" required>
            <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}" required>
            <label for="conteudo">Conteúdo: </label>
                <textarea class="form-control" name="conteudo" rows="3" required>{{postagem.conteudo}}</textarea>
            <label for="categorias">Categorias: </label>
                <select name="categoria" id="" class="form-select" required>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <input type="submit" class="btn btn-success mt-2" value="Editar postagem">
        </form>
    </div>
</div>